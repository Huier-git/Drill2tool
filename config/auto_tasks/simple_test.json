{
  "version": "1.0",
  "metadata": {
    "name": "SimpleTest",
    "description": "简单钻进测试 - 单一参数",
    "author": "DrillControl",
    "created_date": "2025-01-15"
  },
  "presets": [
    {
      "id": "P1",
      "description": "标准参数",
      "vp_mm_per_min": 40.0,
      "rpm": 55.0,
      "fi_hz": 5.0,
      "torque_limit_nm": 1500.0,
      "pressure_limit_n": 15000.0,
      "drill_string_weight_n": 500.0,
      "stall_velocity_mm_per_min": 5.0,
      "stall_window_ms": 1000
