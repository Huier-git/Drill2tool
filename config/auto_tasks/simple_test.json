  ],
  "steps": [
    {
      "type": "positioning",
      "target_depth": 20.0,
      "param_id": "P1",
      "timeout": 60,
      "description": "定位到20mm"
    },
    {
      "type": "hold",
      "hold_time": 5,
      "timeout": 10,
      "description": "稳定5秒"
    },
    {
      "type": "drilling",
      "target_depth": 50.0,
      "param_id": "P1",
      "timeout": 180,
      "description": "钻进到50mm"
    },
    {
      "type": "hold",
      "hold_time": 10,
      "timeout": 15,
      "description": "完成保持10秒"
    }
  ]
